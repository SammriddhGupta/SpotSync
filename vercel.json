{
    "version": 2,
    "builds": [
      {
        "src": "api/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      },
      {
        "src": "/site\\.webmanifest",
        "dest": "/site.webmanifest"
      },
      {
        "src": "/(.*\\.(js|css|png|jpg|ico|svg|webmanifest))",
        "dest": "/$1"
      }
    ]
  }
  